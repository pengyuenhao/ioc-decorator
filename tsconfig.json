{
    "compilerOptions": {
        "module": "commonjs",
        "sourceMap": true,
        "experimentalDecorators": true,
        "lib": [
            "es6","dom"
        ],
        //"declaration": true,
        //"declarationDir": "/bin/release",
        //"declarationMap": true,
        "target": "es5",
        "outDir": "./bin/debug/"
    },
    "include": [
        "**/*.ts",   //include是指编译包含的文件或目录，这是配置的是包括子目录下的所有ts文件
        "!./node_modules/**/*.ts"
    ]
}